@model IEnumerable<Foodery.Web.ViewModels.Product.ProductAllViewModel>

@{
    ViewData["Title"] = "All";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img class="w-25 h-25" src="@item.ImageUrl"/>
                </td>
                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                {
                    <td>
                        <button class="w-75 btn btn-dark mb-1">
                            <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration:none">Edit</a>
                        </button>
                        <button class="w-75 btn btn-dark mb-1">
                            <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration:none">Details</a>
                        </button>
                        <button class="w-75 btn btn-dark mb-1">
                            <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration:none">Delete</a>
                        </button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
